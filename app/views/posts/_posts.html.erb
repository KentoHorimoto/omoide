<ul class="media-list">
  <% posts.each do |post| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(post.user, { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to post.user.name, user_path(post.user) %> <span class="text-muted">posted at <%= post.created_at %></span>
        </div>
        <div>
           <% if post.image? %>
        　　<%= link_to image_tag(post.image.thumb.url), post %>
        　<% else %>
        　　<%= image_tag 'noimage.jpg',:size =>'240x240' %>
        　<% end %>
          <p><%= post.title %></p>
          <p><%= post.content %></p>
        </div>
        <div>
          <% if current_user == post.user %>
            <%= link_to "Delete", post, method: :delete, data: { confirm: "投稿を削除してもよろしいですか?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate posts %>
</ul>