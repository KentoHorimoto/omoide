<% posts.each do |post| %>
   
        <div>
          <%= link_to post.user.name, user_path(post.user) %> <span class="text-muted">投稿日：<%= simple_time(post.created_at) %></span>
        </div> 
        <div>
           <% if post.image? %>
        <%= link_to image_tag(post.image.thumb.url), post %>
         <% else %>
          <%= image_tag 'noimage.jpg',:size =>'240x240' %>
         <% end %>
          <p><%= post.title %></p>
          <p><%= post.content %></p>
        </div>

  <% end %>
  <%= paginate posts %>
